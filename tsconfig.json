{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "es6",
        "target": "es5",
        "outDir": "lib",
        "moduleResolution": "node",
        "lib": ["dom", "es2016", "es2017.object"],
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "paths": {
            "@trousers/*": ["packages/*/src"],
            "@emotion/core": ["typings/emotion.d.ts"]
        }
    },
    "files": [],
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "__tests__",
        "**/*.test*",
        "**/*.spec*",
        "examples"
    ],
    "references": [
        { "path": "packages/collector" },
        { "path": "packages/core" },
        { "path": "packages/hash" },
        { "path": "packages/registry" },
        { "path": "packages/server" },
        { "path": "packages/theme" },
        { "path": "packages/theme-css" },
        { "path": "packages/utils" }
    ]
}
